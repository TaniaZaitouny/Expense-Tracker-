<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.expensetracker.TransactionController">
    <children>
        <HBox prefHeight="400.0" prefWidth="600.0">
            <children>
            <AnchorPane id="Menu" prefHeight="400.0" prefWidth="111.0">
               <children>
                  <VBox layoutX="-1.0" layoutY="98.0" prefHeight="311.0" prefWidth="127.0" spacing="10.0">
                     <children>
                        <Button fx:id="homeButton" alignment="TOP_LEFT" graphicTextGap="8.0" mnemonicParsing="false" onAction="#homePage" prefHeight="28.0" prefWidth="103.0" stylesheets="@styles.css" text="Home">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="19.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@home.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="categoriesButton" alignment="TOP_LEFT" graphicTextGap="8.0" mnemonicParsing="false" onAction="#categoriesPage" prefHeight="27.0" prefWidth="119.0" stylesheets="@styles.css" text="Categories">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <graphic>
                              <ImageView id="icon" fitHeight="19.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@category.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="transactionsButton" alignment="TOP_LEFT" graphicTextGap="8.0" mnemonicParsing="false" onAction="#transactionsPage" prefHeight="27.0" prefWidth="123.0" stylesheets="@styles.css" text="Transactions">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="19.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@transaction.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="reportsButton" alignment="TOP_LEFT" graphicTextGap="8.0" mnemonicParsing="false" onAction="#reportsPage" prefHeight="27.0" prefWidth="123.0" stylesheets="@styles.css" text="Reports">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="19.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@report.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="6.0" />
                     </padding>
                  </VBox>
               </children>
            </AnchorPane>
                <AnchorPane id="content" prefHeight="400.0" prefWidth="488.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="488.0">
                            <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="375.0" spacing="5.0">
                           <children>
                              <Label prefHeight="28.0" prefWidth="359.0" style="-fx-font-size: 19px; -fx-font-weight: bold;" text="Transactions" HBox.hgrow="ALWAYS" />
                              <Button fx:id="addTransactionButton" mnemonicParsing="false" onAction="#addTransactionPage" prefHeight="25.0" prefWidth="119.0" text="Add Transaction" HBox.hgrow="NEVER" />
                           </children>
                           <padding>
                              <Insets left="10.0" right="18.0" top="10.0" />
                           </padding>
                        </HBox>
                        <VBox alignment="CENTER" prefHeight="343.0" prefWidth="382.0">
                           <children>
                              <StackPane>
                                 <children>
                                    <TableView maxWidth="-Infinity" prefHeight="271.0" prefWidth="449.0">
                                       <columns>
                                          <TableColumn prefWidth="146.0" text="Category" />
                                          <TableColumn prefWidth="126.0" text="Data" />
                                          <TableColumn prefWidth="209.0" text="Type" />
                                          <TableColumn prefWidth="75.0" text="Actions" />
                                       </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                 </children>
                              </StackPane>
                           </children>
                        </VBox>
                            </children></VBox>
                    </children></AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
