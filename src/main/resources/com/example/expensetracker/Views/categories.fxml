<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="408.0" prefWidth="608.0" stylesheets="@../Styles/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.expensetracker.Controllers.CategoryController">
    <children>
        <HBox prefHeight="400.0" prefWidth="600.0">
            <children>
                <fx:include source="layout.fxml" />
                <AnchorPane prefHeight="400.0" prefWidth="488.0" style="-fx-background-color: #E1E5F2;;">
                    <children>
                        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="482.0" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="375.0" spacing="5.0">
                           <Label prefHeight="44.0" prefWidth="359.0" style="-fx-font-size: 19px; -fx-font-weight: bold;" text="Categories" textFill="#1c1d1e" HBox.hgrow="ALWAYS" />
                           <ChoiceBox fx:id="filter" prefWidth="110.0" value="Filter By">
                               <items>
                                   <FXCollections fx:factory="observableArrayList">
                                       <String fx:value="DAILY"/>
                                       <String fx:value="WEEKLY"/>
                                       <String fx:value="MONTHLY"/>
                                       <String fx:value="YEARLY"/>
                                   </FXCollections>
                               </items>
                           </ChoiceBox>
                            <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#addCategoryPage" text="Add Category" HBox.hgrow="ALWAYS" />
                           <padding>
                              <Insets left="10.0" right="18.0" top="25.0" />
                           </padding>
                                </HBox>

                                <HBox />


                        <VBox alignment="CENTER" prefHeight="343.0" prefWidth="382.0">
                           <children>
                              <StackPane>
                                 <children>
                                    <TableView fx:id="categoriesTable" maxWidth="-Infinity" prefHeight="314.0" prefWidth="449.0">
                                      <columns>
                                        <TableColumn fx:id="categoryColumn" prefWidth="146.0" text="Category" />
                                        <TableColumn fx:id="typeColumn" prefWidth="126.0" text="Type" />
                                        <TableColumn fx:id="actionsColumn" prefWidth="209.0" text="Actions" />
                                      </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                 </children>
                              </StackPane>
                           </children>
                        </VBox>
                            </children></VBox>
                    </children></AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
