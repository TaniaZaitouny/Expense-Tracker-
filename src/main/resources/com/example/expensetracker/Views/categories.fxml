                                        <TableColumn fx:id="actionsColumn" prefWidth="209.0" text="Actions" />
                                      </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                 </children>
                              </StackPane>
                           </children>
                        </VBox>
                            </children></VBox>
                    </children></AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
