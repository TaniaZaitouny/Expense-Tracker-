                        <Insets left="6.0" />
                     </padding>
                  </VBox>
               </children>
            </AnchorPane>
                <AnchorPane prefHeight="400.0" prefWidth="488.0" style="-fx-background-color: light grey;">
                    <children>
                        <VBox prefHeight="400.0" prefWidth="488.0" spacing="10.0">
                            <children>
                        <Label alignment="CENTER" prefHeight="37.0" prefWidth="468.0" style="-fx-font-size: 19px; -fx-font-weight: bold; -fx-background-color: #FFFFFF; -fx-background-radius: 15px;" text="Create a new category" textFill="#0d0d0d" />
