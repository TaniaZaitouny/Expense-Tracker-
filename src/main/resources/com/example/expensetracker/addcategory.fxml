                                    <children>
                                        <HBox prefHeight="27.0" prefWidth="363.0" spacing="4.0">
                                            <ToggleButton mnemonicParsing="false" prefHeight="27.0" prefWidth="129.0" style="-fx-background-radius: 10px;" stylesheets="@styles.css" text="Expense" textFill="#6c756b">
